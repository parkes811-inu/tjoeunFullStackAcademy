<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.aloha.server.mapper.BoardMapper">

    <!-- 목록 -->
    <select id="list" resultType="">
        SELECT *
        FROM board
    </select>

    <!-- 조회 -->
    <select id="select" resultType="">
        SELECT *
        FROM board
        WHERE id = #{id}
    </select>

    <!-- 등록 -->
    <insert id="insert">
        INSERT INTO board ( writer, cotent )
        VALUES ( #{writer}, #{cotent} )
    </insert>

    <!-- 수정 -->
    <update id="update">
        UPDATE board
           SET content = #{content}
              ,updated_at = now()
        WHERE id = #{id}
    </update>

    <!-- 삭제 -->
    <delete id="delete">
        DELETE FROM board
        WHERE id = #{id}
    </delete>

</mapper>